---
import BaseLayout from '../layouts/BaseLayout.astro';
import site from '../data/site.json';
import about from '../data/about.json';
---

<BaseLayout title={about.meta.title} description={about.meta.description}>
  <section class="py-16 md:py-24">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header with avatar -->
      <div class="flex flex-col md:flex-row gap-8 md:gap-12 items-start mb-12">
        <img
          src="/avatar.png"
          alt="MP"
          class="w-24 h-24 md:w-32 md:h-32 rounded-full bg-neutral-200 dark:bg-neutral-800 flex-shrink-0"
          onerror="this.style.display='none'"
        />
        <div>
          <h1 class="text-neutral-900 dark:text-neutral-100 mb-4">
            {about.header.heading}
          </h1>
          <p class="text-xl text-neutral-600 dark:text-neutral-400">
            {about.header.subtitle}
          </p>
        </div>
      </div>

      <!-- Story -->
      <div class="prose prose-neutral dark:prose-invert max-w-none">
        {about.sections.map((section) => (
          <Fragment>
            <h2>{section.heading}</h2>
            {section.paragraphs.map((para) => (
              <p>{para}</p>
            ))}
          </Fragment>
        ))}
      </div>

      <!-- CTA -->
      <div class="mt-12 pt-12 border-t border-neutral-200 dark:border-neutral-800">
        <h2 class="text-2xl font-semibold text-neutral-900 dark:text-neutral-100 mb-4">
          {about.cta.heading}
        </h2>
        <p class="text-neutral-600 dark:text-neutral-400 mb-6">
          {about.cta.description}
        </p>
        <a
          href={about.cta.href}
          class="inline-flex items-center px-6 py-3 text-base font-medium rounded-lg bg-accent-600 text-white hover:bg-accent-700 transition-colors"
        >
          {about.cta.label}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
