---
interface Props {
  value: string;
  label: string;
}

const { value, label } = Astro.props;
---

<div class="text-center">
  <div class="text-3xl md:text-4xl font-bold text-accent-600 dark:text-accent-400">
    {value}
  </div>
  <div class="mt-1 text-sm text-neutral-600 dark:text-neutral-400">
    {label}
  </div>
</div>
